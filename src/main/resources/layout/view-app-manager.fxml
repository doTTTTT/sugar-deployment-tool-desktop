<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.RowConstraints?>

<?import javafx.scene.control.TextField?>
<GridPane stylesheets="@../css/view-app-manager.css" xmlns="http://javafx.com/javafx/8.0.112" xmlns:fx="http://javafx.com/fxml/1">
    <columnConstraints>
        <ColumnConstraints percentWidth="25" />
        <ColumnConstraints percentWidth="25" />
        <ColumnConstraints percentWidth="25" />
        <ColumnConstraints percentWidth="25" />
    </columnConstraints>
    <rowConstraints>
        <RowConstraints percentHeight="10" />
        <RowConstraints percentHeight="80" />
        <RowConstraints percentHeight="10" />
    </rowConstraints>
    <children>
        <TextField id="repository"
                   fx:id="repository"
                   editable="false"
                   styleClass="text"
                   stylesheets="@../css/view-app-manager.css"
                   maxWidth="Infinity"
                   maxHeight="Infinity"
                   GridPane.columnIndex="0"
                   GridPane.columnSpan="3"
                   GridPane.rowIndex="0" />
        <Button fx:id="chooseRepository"
                maxHeight="Infinity"
                maxWidth="Infinity"
                text="..."
                GridPane.columnIndex="3"
                GridPane.rowIndex="0" />
        <ListView fx:id="listApp"
                  GridPane.columnIndex="0"
                  GridPane.columnSpan="4"
                  GridPane.rowIndex="1" />
        <Button fx:id="install"
                text="Install"
                GridPane.rowIndex="2"
                GridPane.columnIndex="3"
                maxHeight="Infinity"
                maxWidth="Infinity"/>
    </children>
</GridPane>
