<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.RowConstraints?>
<?import javafx.scene.layout.StackPane?>

<?import com.jfoenix.controls.JFXRippler?>
<?import de.jensd.fx.glyphs.fontawesome.FontAwesomeIconView?>

<fx:root
        type="com.jfoenix.controls.JFXRippler"
        xmlns="http://javafx.com/javafx/8.0.112"
        xmlns:fx="http://javafx.com/fxml/1" position="BACK">
        <GridPane style="-fx-background-color: #FFFFFF">
            <columnConstraints>
                <ColumnConstraints percentWidth="30" />
                <ColumnConstraints percentWidth="70" />
            </columnConstraints>
            <rowConstraints>
                <RowConstraints percentHeight="20" />
                <RowConstraints percentHeight="20" />
                <RowConstraints percentHeight="20" />
                <RowConstraints percentHeight="40" />
            </rowConstraints>
            <children>
                <StackPane GridPane.rowIndex="0" GridPane.columnIndex="0" >
                    <FontAwesomeIconView glyphName="ANDROID" size="1.5em" pickOnBounds="true"/>
                </StackPane>
                <StackPane GridPane.rowIndex="1" GridPane.columnIndex="0" >
                    <FontAwesomeIconView glyphName="TELEVISION" size="1.5em" pickOnBounds="true"/>
                </StackPane>
                <StackPane GridPane.rowIndex="2" GridPane.columnIndex="0">
                    <FontAwesomeIconView glyphName="USB" size="1.5em" pickOnBounds="true"/>
                </StackPane>
                <Label fx:id="versionLabel" maxHeight="Infinity" maxWidth="Infinity" text="Test 1" GridPane.columnIndex="1" GridPane.rowIndex="0" alignment="CENTER" ellipsisString="end"/>
                <Label fx:id="modelLabel" maxHeight="Infinity" maxWidth="Infinity" text="Test 1" GridPane.columnIndex="1" GridPane.rowIndex="1" alignment="CENTER" ellipsisString="end"/>
                <Label fx:id="serialLabel" maxHeight="Infinity" maxWidth="Infinity" text="Test 1" GridPane.columnIndex="1" GridPane.rowIndex="2" alignment="CENTER" ellipsisString="end"/>
                <Label fx:id="nameLabel" maxHeight="Infinity" maxWidth="Infinity" text="Name Device" GridPane.columnIndex="0" GridPane.columnSpan="2" GridPane.rowIndex="3" alignment="CENTER" style="-fx-background-color: #808080"/>
            </children>
        </GridPane>
</fx:root>
